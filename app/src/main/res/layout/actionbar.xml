<?xml version="1.0" encoding="utf-8"?>
<!-- aqui vamos a tener nuestra barra para todas las versiones -->
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/elevation_app_bar"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:theme="@style/ThemeOverlay.AppCompat.Light"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/dog_bone_filled_50"
            android:layout_alignParentLeft="true"
            android:id="@+id/myPuppyHome"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/star_filled_48"
            android:layout_alignParentRight="true"
            android:id="@+id/myPuppyLikes"
             />
    </RelativeLayout>



</android.support.v7.widget.Toolbar>